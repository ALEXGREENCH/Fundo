<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/myactivity_title_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@color/main_tab_bottom_notsel"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/myactivity_title_back" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:src="@drawable/action_back_normal"
            android:contentDescription="@string/youdao"
            />
        <TextView 
            android:id="@+id/myactivity_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/my_activity"
            android:textSize="20sp"
            android:textColor="@color/white"/>
     
            <ImageView
                android:id="@+id/addactivity_imv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:src="@drawable/add_activity_img"
                android:contentDescription="@string/youdao" />
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <EditText
        android:id="@+id/activity_input_edit"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"                       
        android:background="@drawable/feedback_selectbar_bg"        
        android:singleLine="true"
        android:textSize="12sp"        
        android:hint="@string/input_activitysearchimportant">
    </EditText>
    
      <ImageView
          android:id="@+id/myactivity_searchImg"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:padding="10dp"
          android:src="@drawable/activity_serch_img"
          android:contentDescription="@string/app_name"/>
        
    </RelativeLayout>
    
       <android.support.v7.widget.RecyclerView
		        android:id="@+id/myactivity_recyclerview"
		       	android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:scrollbars="vertical" />    

    

</LinearLayout>
