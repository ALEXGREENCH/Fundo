<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_content"
    tools:context="com.szkct.weloopbtsmartdevice.activity.NewSaveElectronicInvoiceActivity">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title"
        android:layout_gravity="center"
        android:background="?attr/global_background">

        <TextView
            android:id="@+id/title_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/elektronik_fatura"
            android:textColor="?attr/global_text_color"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:scaleType="centerInside"
            android:src="?attr/global_title_return_back" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_alignParentBottom="true"
            android:background="?attr/health_reports_head_line_color" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="#318583" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/background"
                android:layout_height="50dp">

                <TextView
                    android:gravity="center_vertical|left"
                    android:layout_marginLeft="15dp"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="@string/company_letterhead"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/et_company_letterhead"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="@string/tip_ente_header_information"
                    android:textColorHint="@color/his_white_50"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:background="@null"/>

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="48dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="@string/required"
                    android:textColor="@color/his_red"
                    android:textSize="14sp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="#318583" />

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="?attr/health_reports_head_line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/background"
                android:layout_height="50dp">

                <TextView
                    android:gravity="center_vertical|left"
                    android:layout_marginLeft="15dp"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="@string/tax_id"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/et_tax_id"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="@string/tip_please_company_number"
                    android:textColorHint="@color/his_white_50"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:background="@null"/>

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="48dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="@string/required"
                    android:textColor="@color/his_red"
                    android:textSize="14sp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="?attr/health_reports_head_line_color" />

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="?attr/health_reports_head_line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/background"
                android:layout_height="50dp">

                <TextView
                    android:gravity="center_vertical|left"
                    android:layout_marginLeft="15dp"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="@string/address"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/et_address"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="@string/tip_please_business_address"
                    android:textColorHint="@color/his_white_50"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:background="@null"/>

                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="48dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="@string/required"
                    android:textColor="@color/his_red"
                    android:textSize="14sp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="?attr/health_reports_head_line_color" />

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="?attr/health_reports_head_line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/background"
                android:layout_height="50dp">

                <TextView
                    android:gravity="center_vertical|left"
                    android:layout_marginLeft="15dp"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="@string/phone"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/et_phone"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="@string/tip_please_company_phone"
                    android:textColorHint="@color/his_white_50"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:background="@null"/>

                <TextView
                    android:id="@+id/tv_4"
                    android:layout_width="48dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="@string/required"
                    android:textColor="@color/his_red"
                    android:textSize="14sp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="?attr/health_reports_head_line_color" />

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="?attr/health_reports_head_line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/background"
                android:layout_height="50dp">

                <TextView
                    android:gravity="center_vertical|left"
                    android:layout_marginLeft="15dp"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="@string/bank"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/et_bank"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="@string/tip_please_company_bank_name"
                    android:textColorHint="@color/his_white_50"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:background="@null"/>

                <TextView
                    android:id="@+id/tv_5"
                    android:layout_width="48dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="@string/required"
                    android:textColor="@color/his_red"
                    android:textSize="14sp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="?attr/health_reports_head_line_color" />

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="?attr/health_reports_head_line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/background"
                android:layout_height="50dp">

                <TextView
                    android:gravity="center_vertical|left"
                    android:layout_marginLeft="15dp"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="@string/bank_account"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/et_bank_account"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="@string/tip_please_company_bank_account"
                    android:textColorHint="@color/his_white_50"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:background="@null"/>

                <TextView
                    android:id="@+id/tv_6"
                    android:layout_width="48dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="@string/required"
                    android:textColor="@color/his_red"
                    android:textSize="14sp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="?attr/health_reports_head_line_color" />

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="?attr/health_reports_head_line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/background"
                android:layout_height="50dp">

                <TextView
                    android:gravity="center_vertical|left"
                    android:layout_marginLeft="15dp"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="@string/remarks"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/et_remarks"
                    android:maxLength="5"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="@string/tip__service_name"
                    android:textColorHint="@color/his_white_50"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:background="@null"/>

                <TextView
                    android:id="@+id/tv_7"
                    android:layout_width="48dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="@string/required"
                    android:textColor="@color/his_red"
                    android:textSize="14sp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="?attr/health_reports_head_line_color" />

            <TextView
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tip_save_tv_electronic"
                android:textColor="@color/his_white_50"
                android:textSize="14sp"
                />

            <Button
                android:id="@+id/bt_save"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="64dp"
                android:background="@drawable/bt_bg_activity_receving_code"
                android:textColor="@color/background_content"
                android:text="@string/save_billing_information"
                android:textSize="16sp"
                android:layout_width="300dp"
                android:layout_height="39dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
