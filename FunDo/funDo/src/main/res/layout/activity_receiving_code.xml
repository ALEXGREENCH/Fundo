<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.szkct.weloopbtsmartdevice.activity.ReceivingCodeActivity">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title"
        android:layout_gravity="center"
        android:background="?attr/global_background">

        <TextView
            android:id="@+id/title_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/receiving_code"
            android:textColor="?attr/global_text_color"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:scaleType="centerInside"
            android:src="?attr/global_title_return_back" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_alignParentBottom="true"
            android:background="?attr/health_reports_head_line_color" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_width="160dp"
            android:layout_height="160dp">

            <ImageView
                android:id="@+id/iv_select_weixin"
                android:background="@drawable/qr_code_icon_upload_selector"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_weixin_img"
                android:layout_gravity="center"
                android:layout_width="132dp"
                android:layout_height="132dp" />

        </FrameLayout>

        <View
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <FrameLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_width="160dp"
            android:layout_height="160dp" >

            <ImageView
                android:id="@+id/iv_select_alipay"
                android:background="@drawable/qr_code_icon_upload_selector"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_alipay_img"
                android:layout_gravity="center"
                android:layout_width="132dp"
                android:layout_height="132dp"  />

        </FrameLayout>

    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/weixin_code_title"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/alipay_code_title"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:id="@+id/bt_synchronize"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/background_content"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/newlogin_bg_login1"
            android:text="@string/synchronize"/>

    </LinearLayout>

    <TextView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/code_tishi"
        android:textColor="@color/his_white_50"
        android:textSize="14sp"
        />

</LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_pop_change"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
        android:id="@+id/bt_change_img"
        android:background="@drawable/bt_bg_activity_receving_code"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="@string/replace_payment_code"
        android:textColor="@color/background_content"
        android:textSize="16sp"
        android:layout_width="305dp"
        android:layout_height="43dp" />

    </RelativeLayout>

</FrameLayout>