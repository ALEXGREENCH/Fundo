<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/li_look_bluetooth"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/global_background_content"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.szkct.weloopbtsmartdevice.main.DeviceScanActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title"
        android:layout_gravity="center"
        android:background="?attr/global_background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="?attr/global_text_color"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:scaleType="centerInside"
            android:src="?attr/global_title_return_back" />

        <ImageView
            android:id="@+id/img_bluetooth_sesarch"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/iconfont_jiazai"
            android:visibility="gone" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_alignParentBottom="true"
            android:background="?attr/health_reports_head_line_color" />
    </RelativeLayout>


    <TextView
        android:id="@+id/discon_ble_txt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?attr/global_background"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center_vertical"
        android:paddingStart="20sp"
        android:paddingEnd="10sp"
        android:text="@string/disconnect_the_current_device"
        android:textColor="?attr/global_text_color"
        android:textSize="18sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"

        android:background="?attr/health_reports_head_line_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:layout_marginTop="30dp"
        android:background="?attr/health_reports_head_line_color" />

    <TextView
        android:visibility="gone"
        android:id="@+id/ignores_ble_txt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?attr/global_background"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center_vertical"
        android:paddingStart="20sp"
        android:paddingEnd="10sp"
        android:text="@string/ignores_the_device"
        android:textColor="?attr/global_text_color"
        android:textSize="18sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"

        android:background="?attr/health_reports_head_line_color" />


</LinearLayout>