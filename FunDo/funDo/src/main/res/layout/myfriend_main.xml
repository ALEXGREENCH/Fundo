<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true" 
    android:clipToPadding="true"
    android:id="@+id/line_myfriend_layout"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/myfriend_title_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@color/main_tab_bottom_notsel"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/myfriend_title_home" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:src="@drawable/action_back_normal"
            android:contentDescription="@string/youdao"
            />
        <TextView 
            android:id="@+id/myfriend_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/my_friend"
            android:textSize="20sp"
            android:textColor="@color/white"/>
     
            <ImageView
                android:id="@+id/addfriend_imv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:src="@drawable/add_friend_img"
                android:contentDescription="@string/youdao" />
        
    </RelativeLayout>
    
     <android.support.v7.widget.RecyclerView
		        android:id="@+id/myfriend_recyclerview"
		       	android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:scrollbars="vertical" /> 
    

</LinearLayout>
