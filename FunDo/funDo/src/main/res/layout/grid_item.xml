<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="5dp"
    android:gravity="center"
    android:orientation="vertical" >
  <RelativeLayout 
    android:layout_width="wrap_content"
   android:layout_height="wrap_content"
     android:background="?attr/push_item_background" 
    android:layout_marginTop="20dp"
    android:padding="10dp"
    android:gravity="center_vertical" >
    
      
 
<TextView
        android:id="@+id/no_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/global_text_color"
        android:layout_centerInParent="true"
       android:text="@string/nopreview"
        android:layout_margin="5dp"
        android:gravity="center"
      
        android:textSize="16sp" >
    </TextView>
   <ImageView 
        android:id="@+id/image" 
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:background="?attr/global_background" 
        android:padding="5dp"
        
         >
    </ImageView>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/global_text_color"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/image"
        android:gravity="center"
        android:textSize="16sp" >
    </TextView>
	<!-- <ToggleButton
                android:id="@+id/find_telephone_switchone"
                android:layout_width="50dp"
                android:layout_height="25dp"
                
               
                
                android:background="@drawable/alertsetting_box_selector"
                android:clickable="false"
                android:focusable="false"
                android:textOff=""
                android:textOn="" /> -->
   </RelativeLayout>

</LinearLayout>