<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!--第三方广告-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fl_container"
        android:minHeight="400dp"
        />
    <!--<FrameLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:id="@+id/fl_container"-->
        <!--android:minHeight="400dp"-->
        <!--/>-->
    <FrameLayout
        android:id="@+id/fl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/im4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/aaaaaa" />

    <ImageView
        android:id="@+id/im3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ccccccc" />

    <ImageView
        android:id="@+id/im2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bbbbbb" />

    <ImageView
        android:id="@+id/im1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/aaaaaa" />

    <TextView
        android:id="@+id/welcome_four_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:text="@string/welcome_funrun"
        android:textColor="@color/white"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/welcome_btn_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/letgo_bg"
        android:text="@string/welcome_in"
        android:textColor="@color/white"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/welcome_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:scaleType="centerCrop"
        android:src="@drawable/welcome_background"
        android:visibility="invisible"/>

  <!--  <ImageView
        android:id="@+id/welcome_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/welcome_btn_in"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="46dp"
        android:scaleType="centerCrop"
        android:src="@drawable/welcome_background" />-->

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_tiaoguo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="28dp"
        android:text="@string/skip"
        android:textColor="@color/white"
        android:textSize="@dimen/abc_text_size_medium_material" />
    <!--android:text="@string/skip"-->

    </FrameLayout>

    <!--开屏页-->
    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"

        android:onClick="onLuanchClick"
        android:clickable="true"
         />

    <!--倒计时按钮-->
    <TextView
        android:visibility="invisible"
        android:id="@+id/tv_time"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:gravity="center"
        android:background="@drawable/background_circle"
        android:onClick="onToMain"
        android:clickable="true"
        android:textColor="@android:color/white"
        android:textSize="14sp"/>


</RelativeLayout>