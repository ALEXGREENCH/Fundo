<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">

    <ImageView
        android:id="@+id/data_bt_downturning"
        android:layout_width="50dp"
        android:layout_height="15dp"
       android:src="?attr/home_fragment_icon_left"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"/>

    <!--android:layout_width="40dp"-->
    <!--android:layout_height="wrap_content"-->

    <TextView
        android:id="@+id/curdate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="?attr/home_fragment_select_time_text_color"
        android:textSize="26sp" />

    <ImageView
        android:id="@+id/data_bt_upturning"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:src="?attr/home_fragment_icon_right"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"/>

</LinearLayout>