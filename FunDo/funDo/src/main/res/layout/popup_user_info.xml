<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/global_background_content">
    
    <LinearLayout
        android:id="@+id/picker_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
        android:background="?attr/global_background_content"
        android:orientation="horizontal">
        <NumberPicker
            android:id="@+id/sex_picker"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <NumberPicker
            android:id="@+id/age_picker"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
       <LinearLayout
            android:id="@+id/health_report_stature_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/global_background_content"
            android:orientation="horizontal"
            android:visibility="gone" >

            <NumberPicker
                android:id="@+id/stature_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/centimeter"
                android:textColor="?attr/global_text_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/health_report_stature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/global_background_content"
            android:orientation="horizontal"
            android:visibility="gone" >

            <NumberPicker
                android:id="@+id/stature_picker_imperial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/imperial_foot"
                android:textColor="?attr/global_text_color" />

            <NumberPicker
                android:id="@+id/stature_inch_picker_imperial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/imperial_inch"
                android:textColor="?attr/global_text_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/health_report_weight_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/global_background_content"
            android:orientation="horizontal"
            android:visibility="gone" >

            <NumberPicker
                android:id="@+id/weight_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/kilogram"
                android:textColor="?attr/global_text_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/health_report_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/global_background_content"
            android:orientation="horizontal"
            android:visibility="gone" >

            <NumberPicker
                android:id="@+id/weight_picker_imperial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

           

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/imperial_pound"
                android:textColor="?attr/global_text_color" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/global_text_color"
        android:layout_below="@id/picker_part"
        android:padding="10dp"
        android:gravity="center"
        android:text="@string/sure"
        android:background="@color/body_blue"
        android:clickable="true"/>
    
</RelativeLayout>