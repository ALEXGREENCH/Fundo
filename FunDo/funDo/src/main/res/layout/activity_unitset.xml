<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title"
        android:layout_gravity="center"
        android:background="?attr/global_background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/unit_setting"
            android:textColor="?attr/global_text_color"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:scaleType="centerInside"
            android:src="?attr/global_title_return_back" />

        <ImageView
            android:id="@+id/iv_save"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="?attr/global_title_finish" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_alignParentBottom="true"
            android:background="?attr/health_reports_head_line_color" />
    </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="?attr/health_reports_head_line_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragmen_big_data_title_margin_top"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:text="@string/metric"
        android:textColor="?attr/global_text_color"
        android:textSize="15sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="?attr/health_reports_head_line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragmen_big_data_title_margin_top"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/metric_tv"
            android:text="@string/metric_units"
            android:textColor="?attr/global_text_color"
            android:textSize="20sp"
            android:gravity="center_vertical"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/metric_iv"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:src="@drawable/unit_set_radio"
            android:layout_gravity="center_vertical"/>
    </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="?attr/health_reports_head_line_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragmen_big_data_title_margin_top"
            android:layout_margin="10dp"
            >
            <TextView
                android:id="@+id/imperial_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/imperial_units"
                android:textColor="?attr/global_text_color"
                android:textSize="20sp"
                android:gravity="center_vertical"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/imperial_iv"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:src="@drawable/unit_set_radio"
                android:layout_gravity="center_vertical"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="?attr/health_reports_head_line_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragmen_big_data_title_margin_top"
            android:gravity="center_vertical"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:text="@string/temp_unit"
            android:textColor="?attr/global_text_color"
            android:textSize="15sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="?attr/health_reports_head_line_color" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragmen_big_data_title_margin_top"
            android:layout_margin="10dp"
            >
            <TextView
                android:id="@+id/celsius_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/celsius"
                android:textColor="?attr/global_text_color"
                android:textSize="20sp"
                android:gravity="center_vertical"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/celsius_iv"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:src="@drawable/unit_set_radio"
                android:layout_gravity="center_vertical"/>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="?attr/health_reports_head_line_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragmen_big_data_title_margin_top"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >
            <TextView
                android:id="@+id/fahrenheit_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/fahrenheit"
                android:textColor="?attr/global_text_color"
                android:textSize="20sp"
                android:gravity="center_vertical"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/fahrenheit_iv"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:src="@drawable/unit_set_radio"
                android:layout_gravity="center_vertical"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="?attr/health_reports_head_line_color" />
    </LinearLayout>
</ScrollView>