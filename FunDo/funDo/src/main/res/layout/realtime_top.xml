<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/realtime_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/popup_shape"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.szkct.weloopbtsmartdevice.view.DIN1451EF_EngNeuTypefaceTextView
                android:id="@+id/realtime_mile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="0.00"
                android:textColor="@android:color/white"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/realtime_mile_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kilometre"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#94979c" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.szkct.weloopbtsmartdevice.view.DIN1451EF_EngNeuTypefaceTextView
                android:id="@+id/realtime_peisu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0&apos;0&apos;&apos;"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reatime_pace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/realtime_pace"
                    android:textColor="#94979c"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/reatime_minutes_km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/realtime_minutes_km"
                    android:textColor="#94979c"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.szkct.weloopbtsmartdevice.view.DIN1451EF_EngNeuTypefaceTextView
                android:id="@+id/realtime_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.szkct.weloopbtsmartdevice.view.AlwaysMarqueeTextView
                    android:id="@+id/reatime_minutes_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/realtime_time"
                    android:textColor="#94979c"
                    android:textSize="15sp"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:focusableInTouchMode="true"
                    android:clickable="false"
                    android:singleLine="true"/>

                <com.szkct.weloopbtsmartdevice.view.AlwaysMarqueeTextView
                    android:id="@+id/reatime_minutes_hms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/realtime_hms"
                    android:textColor="#94979c"
                    android:textSize="12sp"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:focusableInTouchMode="true"
                    android:clickable="false"
                    android:singleLine="true"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.szkct.weloopbtsmartdevice.view.DIN1451EF_EngNeuTypefaceTextView
                android:id="@+id/realtime_qianka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.szkct.weloopbtsmartdevice.view.AlwaysMarqueeTextView
                    android:id="@+id/reatime_minutes_consume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/realtime_consume"
                    android:textColor="#94979c"
                    android:textSize="15sp"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:focusableInTouchMode="true"
                    android:clickable="false"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/reatime_minutes_calorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/realtime_calorie"
                    android:textColor="#94979c"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>

