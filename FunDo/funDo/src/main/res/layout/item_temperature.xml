<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_temp_check"
    android:layout_width="match_parent"
    android:layout_height="@dimen/small_menu"
    android:layout_below="@id/rl_ecg_check"
    android:layout_marginBottom="30dp"
    android:visibility="gone"
    android:background="?attr/global_background"
    >

    <ImageView
        android:id="@+id/iv_heart_check"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/small_menu"
        android:layout_marginLeft="15dp"
        android:clickable="false"
        android:focusable="false"
        android:scaleType="centerInside"
        android:src="@drawable/temp_check" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/small_menu"
        android:layout_toEndOf="@id/iv_heart_check"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center_vertical"
        android:paddingEnd="10sp"
        android:paddingStart="10dp"
        android:text="@string/temp_check"
        android:textColor="?attr/global_text_color"
        android:textSize="@dimen/small_menu_size" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingEnd="20dp"
        android:scaleType="centerInside"
        android:src="@drawable/arrow_right" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:layout_alignParentBottom="true"
        android:background="?attr/health_reports_head_line_color" />

</RelativeLayout>