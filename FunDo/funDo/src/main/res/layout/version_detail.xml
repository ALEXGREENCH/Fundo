<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/versionCode"
        android:orientation="horizontal"
        android:layout_marginTop="120dp">
        <TextView
            android:id="@+id/versionCodeText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="VerseinCode:115"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/versionShortName"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/versionShortNameText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="VerseinShortName:V1.1.8"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/versionName"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/versionNameText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="VerseinName:V1.1.8-21-gdadadwqqe"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>