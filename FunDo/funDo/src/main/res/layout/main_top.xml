<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="25dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/popup_shape"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg"
            android:orientation="horizontal"
            android:padding="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">

            <ImageView
                android:id="@+id/sportmode_logo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/sportmode_logo_b" />

            <TextView
                android:id="@+id/tv_ydgjtitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/funfit_sprots"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textColor="#94979c"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/traject_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"

                android:textColor="#94979c"
                android:textSize="12sp" />


        </LinearLayout>


        <com.szkct.weloopbtsmartdevice.view.DIN1451EF_EngNeuTypefaceTextView
            android:id="@+id/traject_mile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="16dp"

            android:textColor="@android:color/white"
            android:textSize="33sp" />

        <TextView
            android:id="@+id/traject_mile_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/kilometer"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.szkct.weloopbtsmartdevice.view.DIN1451EF_EngNeuTypefaceTextView
                android:id="@+id/traject_peisu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@android:color/white"
                android:textSize="26sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.szkct.weloopbtsmartdevice.view.AlwaysMarqueeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/realtime_pace"
                    android:textColor="#94979c"
                    android:textSize="15sp"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:focusableInTouchMode="true"
                    android:clickable="false"
                    android:singleLine="true"
                    />

                <com.szkct.weloopbtsmartdevice.view.AlwaysMarqueeTextView
                    android:id="@+id/peisu_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/realtime_minutes_km"
                    android:textColor="#94979c"
                    android:textSize="12sp"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:focusableInTouchMode="true"
                    android:clickable="false"
                    android:singleLine="true"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.szkct.weloopbtsmartdevice.view.DIN1451EF_EngNeuTypefaceTextView
                android:id="@+id/traject_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@android:color/white"
                android:textSize="26sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/realtime_time"
                    android:textColor="#94979c"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/shichang_danwei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/realtime_hms"
                    android:textColor="#94979c"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.szkct.weloopbtsmartdevice.view.DIN1451EF_EngNeuTypefaceTextView
                android:id="@+id/traject_qianka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="567"
                android:textColor="@android:color/white"
                android:textSize="26sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/realtime_consume"
                    android:textColor="#94979c"
                    android:textSize="15sp" />

                <com.szkct.weloopbtsmartdevice.view.AlwaysMarqueeTextView
                    android:id="@+id/traject_qianka_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/realtime_calorie"
                    android:textColor="#94979c"
                    android:textSize="12sp"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:focusableInTouchMode="true"
                    android:clickable="false"
                    android:singleLine="true"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/jaisudai" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/speed_max"
                android:textColor="#94979c"
                android:textSize="12sp" />
            <!--最慢-->
            <com.szkct.weloopbtsmartdevice.view.DIN1451EF_EngNeuTypefaceTextView
                android:id="@+id/traject_zuiman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@android:color/white"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/speed_average"
                android:textColor="#94979c"
                android:textSize="12sp" />
            <!--平均-->
            <com.szkct.weloopbtsmartdevice.view.DIN1451EF_EngNeuTypefaceTextView
                android:id="@+id/traject_pingjun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@android:color/white"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/speed_min"
                android:textColor="#94979c"
                android:textSize="12sp" />
            <!--最快-->
            <com.szkct.weloopbtsmartdevice.view.DIN1451EF_EngNeuTypefaceTextView
                android:id="@+id/traject_zuikuai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@android:color/white"
                android:textSize="17sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

