<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    >


    <FrameLayout
        android:id="@+id/container"
        android:background="@color/allbg"
        android:paddingBottom="50dp"
        android:paddingTop="@dimen/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="match_parent"
                 android:layout_height="63dp"
                 android:layout_alignParentBottom="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="?attr/global_bottom_background"
            android:gravity="center_vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <!--运动轨迹-->
                <RadioButton
                    android:id="@+id/rb_sport_trajectory"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:button="@null"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/sport_trajectory"
                    android:textColor="?attr/main_bottom_text_color"
                    android:textSize="12sp"
                    android:checked="false"/>

                <!--详细数据-->
                <RadioButton
                    android:id="@+id/rb_detailed_data"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:button="@null"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/detailed_data"
                    android:textColor="?attr/main_bottom_text_color"
                    android:textSize="12sp"
                    android:checked="false"/>

                <!--配速详情-->
                <RadioButton
                    android:id="@+id/rb_speed_matching_details"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:button="@null"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/speed_matching_details"
                    android:textColor="?attr/main_bottom_text_color"
                    android:textSize="12sp" />

                <!--运动图表-->
                <RadioButton
                    android:id="@+id/rb_motion_chart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:button="@null"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/motion_chart"
                    android:textColor="?attr/main_bottom_text_color"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="?attr/health_reports_head_line_color"  />
        </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_sprothis_bottom1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/icon_sporthistory_item_focus"
        />
    <ImageView
        android:id="@+id/iv_sprothis_bottom2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/icon_sporthistory_item_focus"
        />

    <ImageView
        android:id="@+id/iv_sprothis_bottom3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/icon_sporthistory_item_focus"
        />

    <ImageView
        android:id="@+id/iv_sprothis_bottom4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/icon_sporthistory_item_focus"
        />


</LinearLayout>


    </FrameLayout>

    <RelativeLayout
        android:background="?attr/global_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tv_sporthistory_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="户外跑"
            android:textColor="?attr/global_text_color"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:scaleType="centerInside"
            android:src="?attr/global_title_return_back" />
        <ImageButton
            android:id="@+id/ib_sporthistory_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_alignParentEnd="true"
            android:src="?attr/sport_share_background" />

        <ImageButton
            android:id="@+id/ib_sporthistory_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_toStartOf="@id/ib_sporthistory_share"
            android:src="?attr/sport_photo_background" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_alignParentBottom="true"
            android:background="?attr/health_reports_head_line_color" />
    </RelativeLayout>
</RelativeLayout>