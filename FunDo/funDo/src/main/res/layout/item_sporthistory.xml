<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <RelativeLayout

        android:id="@+id/ll_type2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="?attr/global_background"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingEnd="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!--总距离-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sportshistory_total_distance"
                    android:textColor="?attr/global_text_color"
                    android:textSize="10sp"
                    android:textStyle="bold" />
                <!--总距离大小-->
                <com.szkct.weloopbtsmartdevice.view.DIN1451EF_EngNeuTypefaceTextView
                    android:id="@+id/item_allde"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/home_fragment_mileage_text_color"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sportshistory_total_duration"
                    android:textColor="?attr/global_text_color"
                    android:textSize="10sp"
                    android:textStyle="bold" />
                <!--总时长-->
                <com.szkct.weloopbtsmartdevice.view.DIN1451EF_EngNeuTypefaceTextView
                    android:id="@+id/item_alltime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  01:28:03"
                    android:textColor="?attr/home_fragment_mileage_text_color"
                    android:textSize="10sp" />

            </LinearLayout>
        </LinearLayout>

        <!--月份-->
        <com.szkct.weloopbtsmartdevice.view.DIN1451EF_EngNeuTypefaceTextView
            android:id="@+id/item_month"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"

            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textColor="?attr/global_text_color"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_alignParentBottom="true"
            android:background="?attr/health_reports_head_line_color" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_alignParentTop="true"
            android:background="?attr/health_reports_head_line_color" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_type1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/line"
        android:background="?attr/global_background"
        android:orientation="vertical">

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_alignParentTop="true"
            android:background="?attr/health_reports_head_line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <!--原始-->
               <!-- <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">
                    &lt;!&ndash;运动模式的图标&ndash;&gt;
                    <ImageView
                        android:id="@+id/item_ico"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:src="?attr/sportshistory_huwaipao" />

                    &lt;!&ndash;运动模式的名字&ndash;&gt;
                    <TextView
                        android:id="@+id/item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/huibai"
                        android:textSize="12sp" />
                    &lt;!&ndash;当前条目的运动时间&ndash;&gt;

                    &lt;!&ndash;运动模式的数据来源&ndash;&gt;
                    <ImageView
                        android:id="@+id/item_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_phone" />

                    <TextView
                        android:id="@+id/item_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:maxLines="1"
                        android:textColor="@color/huibai"
                        android:textSize="9sp" />
                </LinearLayout>-->
                <!--原始-->



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="3dp"
                    >

                    <!--当前条目的运动模式的图标-->
                    <ImageView
                        android:id="@+id/item_ico"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:src="?attr/sportshistory_huwaipao"
                        android:layout_alignParentStart="true"
                       />
                    <!--android:layout_marginTop="5dp"-->

                    <!--当前条目的运动模式的名字-->
                    <TextView
                        android:id="@+id/item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:textColor="@color/huibai"
                        android:textSize="8sp"
                        android:layout_alignBaseline="@+id/item_date"
                        android:layout_marginRight="2dp"
                        android:layout_toEndOf="@id/item_ico"/>
                    <!--android:textSize="12sp"-->

                    <!--当前条目的运动时间-->

                    <!--android:paddingEnd="5dp"-->

                    <!--当前条目的数据来源-->
                    <ImageView
                        android:layout_toEndOf="@id/item_name"
                        android:id="@+id/item_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:src="@drawable/icon_phone"
                        android:layout_marginTop="3dp"
                        />

                    <TextView
                        android:layout_toEndOf="@id/item_from"
                        android:id="@+id/item_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:maxLines="1"
                        android:textColor="@color/huibai"
                        android:textSize="6sp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="3dp"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.szkct.weloopbtsmartdevice.view.DIN1451EF_EngNeuTypefaceTextView
                        android:id="@+id/item_mile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="0.00"
                        android:textColor="?attr/global_text_color"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_danwei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kilometer"
                        android:textColor="?attr/global_text_color"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                   >
                    <!--android:gravity="center_vertical"-->

                    <ImageView
                        android:id="@+id/img_peisu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/peisu" />

                    <com.szkct.weloopbtsmartdevice.view.DIN1451EF_EngNeuTypefaceTextView
                        android:id="@+id/item_peisu"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="05'26''"
                        android:textColor="?attr/global_text_color"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                    <!--android:layout_width="40dp"-->


                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/shichang" />

                    <com.szkct.weloopbtsmartdevice.view.DIN1451EF_EngNeuTypefaceTextView
                        android:id="@+id/item_time"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="05:26:22"
                        android:textColor="?attr/global_text_color"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                    <!--android:layout_width="60dp"-->

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_kllhb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/reliang" />

                    <com.szkct.weloopbtsmartdevice.view.DIN1451EF_EngNeuTypefaceTextView
                        android:id="@+id/item_rl"
                        android:layout_width="40dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="3dp"
                        android:text="0"
                        android:textColor="?attr/global_text_color"
                        android:textStyle="bold" />
                    <!--android:layout_width="40dp"-->

                    <ImageView
                        android:id="@+id/img_haiba"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/haiba" />

                    <com.szkct.weloopbtsmartdevice.view.DIN1451EF_EngNeuTypefaceTextView
                        android:id="@+id/item_haiba"
                        android:layout_width="60dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="3dp"
                        android:text="+0"
                        android:textColor="?attr/global_text_color"
                        android:textStyle="bold" />
                    <!--android:layout_width="60dp"-->


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_rightarrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_arrow_right_end_selected_white" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_alignParentBottom="true"
            android:background="?attr/health_reports_head_line_color" />

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:background="?attr/health_reports_head_line_color" />
    </LinearLayout>
</LinearLayout>