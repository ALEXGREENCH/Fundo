<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_dialo_layout"
    android:orientation="vertical" >

    <!-- 中间白色背景,两个TextView,标题和内容,留一个LinearLayout,在代码中根据调用动态加上按钮 -->

    <LinearLayout
        android:id="@+id/dialogcontext_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:visibility="gone" />

        <View
            android:id="@+id/dialog_view1"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#dddddd" />

        <TextView
            android:id="@+id/dialog_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <!-- 在LinearLayout中加按钮 -->

        <View
            android:id="@+id/dialog_view2"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#dddddd" />

        <LinearLayout
            android:id="@+id/dialog_buttonLayout"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dialog_center"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/dialogcenterbtn_rounded_onlick"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="gone" />

            <View
                android:id="@+id/dialog_view4"
                android:layout_width="@dimen/line"
                android:layout_height="wrap_content"
                android:background="#dddddd"
                android:visibility="gone" />

            <TextView
                android:id="@+id/dialog_no"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/dialogleftbtn_rounded_onlick"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="gone" />

            <View
                android:id="@+id/dialog_view3"
                android:layout_width="@dimen/line"
                android:layout_height="wrap_content"
                android:background="#dddddd"
                android:visibility="gone" />

            <TextView
                android:id="@+id/dialog_yes"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/dialogrightbtn_rounded_onlick"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>