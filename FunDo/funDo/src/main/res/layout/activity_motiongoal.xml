    <View
        android:id="@+id/line_distancegoal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"

        android:background="?attr/health_reports_head_line_color"/>


    <TextView
        android:id="@+id/tv_distancegoal_settingvalue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title"
        android:background="?attr/global_background"

        android:drawableRight="@drawable/im_motiongoal_right"
        android:gravity="center_vertical"
        android:paddingEnd="15dp"
        android:paddingStart="20dp"
        android:textColor="?attr/global_text_color"
        android:textSize="14sp"/>

    <RelativeLayout
