<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"	
	android:background="@drawable/button_shape"	>

	
    <TextView
        android:id="@+id/search_friend_text" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="@string/send_you_message"
        android:textColor="@color/app_theme_colors"
        />
	 
	  <EditText
	    android:id="@+id/message_info"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dip"
		android:layout_below="@id/search_friend_text"		
		android:hint="@string/sendmessage_content"
		android:textSize="14sp"
		android:textColor="@color/app_theme_colors">
	</EditText>
	
		<TextView 
	     	 android:id="@+id/message_tv_num"
	     	 android:layout_width="wrap_content"
	      	 android:layout_height="wrap_content"
	      	 android:layout_below="@id/message_info"
	      	 android:layout_alignParentEnd="true"
	      	 android:layout_marginRight="10dp"
	      	 android:layout_marginEnd="10dp"
	      	 android:text="140"
	     	 android:textSize="18sp"
	         android:textColor="@color/red"
	      />
	
		<Button
		    android:id="@+id/sendmessageButton"
		    android:layout_width="wrap_content"
		    android:layout_height="40dip"
		    android:layout_alignStart="@+id/message_info"
		    android:layout_alignEnd="@+id/message_info"
		    android:layout_margin="10dip"
		    android:layout_below="@id/message_tv_num"
		    android:background="@drawable/button_shape"
		    android:clickable="true"
		    android:textColor="@color/app_theme_colors"
		    android:text="@string/send_you_message" />
	
</RelativeLayout>