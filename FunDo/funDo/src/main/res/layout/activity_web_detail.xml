<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/activity_web_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@color/main_tab_bottom_notsel"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/activity_web_detail_back" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:src="@drawable/action_back_normal"
            android:contentDescription="@string/youdao"
            />
        <TextView 
            android:id="@+id/activity_create_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/activity_detail"
            android:textSize="20sp"
            android:textColor="@color/white"/>
        
        <ImageView
                android:id="@+id/deleteactivity_imv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:src="@drawable/delete_activity_img"
                android:contentDescription="@string/youdao" />
        
    </RelativeLayout>
    
    <WebView
        android:id="@+id/activity_detail_webview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    

</LinearLayout>
